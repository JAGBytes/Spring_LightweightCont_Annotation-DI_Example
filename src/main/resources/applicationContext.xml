<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"

       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.2.xsd
          http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.2.xsd
">
        <bean id="spanishSpellChecker" class="edu.eci.arsw.springdemo.SpanishSpellChecker"/>

        <bean id="englishSpellChecker" class="edu.eci.arsw.springdemo.EnglishSpellChecker"/>

    <!-- Definición del bean GrammarChecker con inyección de dependencias -->
    <bean id="grammarChecker" class="edu.eci.arsw.springdemo.GrammarChecker">
        <constructor-arg ref="spanishSpellChecker"/>
    </bean>
</beans>
